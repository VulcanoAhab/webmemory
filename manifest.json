{

   "version": "0.1",
   "name": "WebMemory",
   "manifest_version": 2,
   "default_locale": "en",
   "minimum_chrome_version": "49",
   "description": "Keep and index your web page",
   "icons": {
      "128": "images/icon128.png",
      "16": "images/icon16.png",
      "48": "images/icon48.png"
   },

   "browser_action": {
      "default_icon": "images/icon.png"
   },

   "content_scripts" : [
     {
       "matches" : ["<all_urls>"],

       "js": ["js/webmemory.js"]
      }
    ],

   "permissions": [ "tabs", "<all_urls>", "downloads"],

   "background": {
    "persistent": false,
    "scripts": ["js/jsPDF-141_debug.js", "js/background.js"]
  }
}
